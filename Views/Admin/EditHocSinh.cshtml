@model QLSV.Models.StudentVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sửa học sinh";
}

<div class="p-3">
    <h4 class="fw-bold mb-3">Sửa học sinh</h4>

    <form asp-action="EditHocSinh" method="post" class="card shadow-sm p-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Tên học sinh</label>
            <input asp-for="TenHocSinh" class="form-control" />
            <span asp-validation-for="TenHocSinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giới tính</label>
            <input asp-for="GioiTinh" class="form-control" />
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày sinh</label>
            <input asp-for="NgaySinh" class="form-control" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Lớp học (Id)</label>
            <input asp-for="IdLopHoc" class="form-control" />
            <span asp-validation-for="IdLopHoc" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="bi bi-save me-1"></i>Lưu</button>
            <a asp-action="HocSinh" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
