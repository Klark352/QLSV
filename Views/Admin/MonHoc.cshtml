@model IEnumerable<QLSV.Entity.MonHoc>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý môn học";
}
<div class="p-3">
    <h4 class="fw-bold mb-3">Quản lý môn học</h4>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tên môn</th>
                        <th>Kì</th>
                        <th>Năm học</th>
                        <th>Giáo viên</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr><td colspan="4" class="text-center text-muted py-3">Chưa có môn.</td></tr>
                    }
                    else
                    {
                        foreach (var m in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@m.TenMonHoc</td>
                                <td>@m.KiHoc</td>
                                <td>@m.NamHoc</td>
                                <td>@m.IdGiaoVienNavigation?.TenGiaoVien</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
