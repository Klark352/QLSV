@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thống kê điểm";
}
<div class="p-3">
    <h4 class="fw-bold mb-3">Thống kê điểm</h4>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex gap-3 flex-wrap">
                <div>
                    <div class="text-muted small">Tổng bảng điểm</div>
                    <div class="fs-3 fw-bold">@ViewBag.TongBangDiem</div>
                </div>
                <div>
                    <div class="text-muted small">Cập nhật gần nhất</div>
                    <div class="fw-semibold">@(ViewBag.CapNhatGanNhat == null ? "—" : ((DateTime)ViewBag.CapNhatGanNhat).ToString("dd/MM/yyyy HH:mm"))</div>
                </div>
            </div>
        </div>
    </div>
</div>
