    <!-- ===== REQUIRED SCRIPTS (BẮT BUỘC) ===== -->
    <!-- OverlayScrollbars -->
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.11.0/browser/overlayscrollbars.browser.es6.min.js"
            crossorigin="anonymous"></script>

    <!-- Popper (Bootstrap needs) -->
    <script src="~/lte/js/popper.min.js" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.min.js"
            crossorigin="anonymous"></script>

    <!-- AdminLTE -->
    <script src="~/lte/js/adminlte.js"></script>

    <!-- ===== OverlayScrollbars init ===== -->
    <script>
        const SELECTOR_SIDEBAR_WRAPPER = '.sidebar-wrapper';
        const Default = {
            scrollbarTheme: 'os-theme-light',
            scrollbarAutoHide: 'leave',
            scrollbarClickScroll: true,
        };

        document.addEventListener('DOMContentLoaded', function () {
            const sidebarWrapper = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (sidebarWrapper && OverlayScrollbarsGlobal?.OverlayScrollbars) {
                OverlayScrollbarsGlobal.OverlayScrollbars(sidebarWrapper, {
                    scrollbars: {
                        theme: Default.scrollbarTheme,
                        autoHide: Default.scrollbarAutoHide,
                        clickScroll: Default.scrollbarClickScroll,
                    },
                });
            }
        });
    </script>

    <!-- ===== Realtime Clock ===== -->
    <script>
        function startLiveClock() {
            const el = document.getElementById('liveClock');
            if (!el) return;

            const fmtTime = new Intl.DateTimeFormat('vi-VN', {
                hour: '2-digit', minute: '2-digit', second: '2-digit'
            });
            const fmtDate = new Intl.DateTimeFormat('vi-VN', {
                weekday: 'short', year: 'numeric', month: '2-digit', day: '2-digit'
            });

            const tick = () => {
                const now = new Date();
                el.innerHTML = `<i class="bi bi-clock"></i> ${fmtTime.format(now)} <span style="opacity:.75">•</span> ${fmtDate.format(now)}`;
            };

            tick();
            setInterval(tick, 1000);
        }

        document.addEventListener('DOMContentLoaded', function () {
            startLiveClock();
        });
    </script>
    <script>
        (function () {
          const KEY = "openMenus_v2";

          function getKey(li) {
            return li.getAttribute("data-menu-key")
              || li.querySelector(":scope > .nav-link p")?.textContent?.trim()
              || "";
          }

          function saveState() {
            const openKeys = [];
            document.querySelectorAll(".sidebar-menu .nav-item.menu-open").forEach(li => {
              const k = getKey(li);
              if (k) openKeys.push(k);
            });
            localStorage.setItem(KEY, JSON.stringify(openKeys));
          }

          function loadState() {
            const openKeys = JSON.parse(localStorage.getItem(KEY) || "[]");
            document.querySelectorAll(".sidebar-menu .nav-item").forEach(li => {
              const hasTree = li.querySelector(":scope > .nav-treeview");
              if (!hasTree) return;
              const k = getKey(li);
              if (k && openKeys.includes(k)) li.classList.add("menu-open");
            });
          }

          function setActiveByUrl() {
            const currentPath = window.location.pathname.replace(/\/+$/, "").toLowerCase() || "/";

            const links = Array.from(document.querySelectorAll(".app-sidebar .sidebar-menu .nav-link[href]"))
              .filter(a => {
                const href = a.getAttribute("href");
                return href && href !== "#" && !href.startsWith("javascript:");
              });

            // chỉ xoá ACTIVE, KHÔNG xoá menu-open (để giữ mở)
            document.querySelectorAll(".app-sidebar .sidebar-menu .nav-link.active")
              .forEach(a => a.classList.remove("active"));

            let best = null;
            let bestLen = -1;

            for (const a of links) {
              const linkPath = new URL(a.getAttribute("href"), window.location.origin).pathname
                .replace(/\/+$/, "").toLowerCase() || "/";

              const isMatch =
                (linkPath === "/" && currentPath === "/") ||
                (linkPath !== "/" && (currentPath === linkPath || currentPath.startsWith(linkPath + "/")));

              if (isMatch && linkPath.length > bestLen) {
                best = a;
                bestLen = linkPath.length;
              }
            }

            if (best) {
              best.classList.add("active");

              // mở toàn bộ cha lên tới root (submenu không bị thu)
              let li = best.closest(".nav-item");
              while (li) {
                li.classList.add("menu-open");
                const parentTree = li.parentElement?.closest(".nav-item");
                li = parentTree || null;
              }

              // active luôn link cha nếu đang ở submenu
              const tree = best.closest(".nav-treeview");
              if (tree) {
                const parentLink = tree.closest(".nav-item")?.querySelector(":scope > .nav-link");
                if (parentLink) parentLink.classList.add("active");
              }
            }
          }

          document.addEventListener("DOMContentLoaded", function () {
            // A) khôi phục trạng thái mở trước (menu-open)
            loadState();

            // B) set active theo URL (không phá menu-open)
            setActiveByUrl();

            // C) click submenu: không cho toggle cha (tránh thu vào)
            document.querySelectorAll(".app-sidebar .nav-treeview .nav-link").forEach(sub => {
              sub.addEventListener("click", function (e) {
                e.stopPropagation();
              });
            });

            // D) mỗi lần click menu cha thì lưu trạng thái sau khi AdminLTE toggle
            document.querySelectorAll(".sidebar-menu .nav-item > .nav-link").forEach(a => {
              a.addEventListener("click", function () {
                setTimeout(saveState, 0);
              });
            });
          });
        })();
    </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

