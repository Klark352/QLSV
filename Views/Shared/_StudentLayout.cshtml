                <!--end::Brand Link-->
            </div>
            <!--end::Sidebar Brand-->
            <!--begin::Sidebar Wrapper-->
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <!--begin::Sidebar Menu-->
                    <ul class="nav nav-pills sidebar-menu flex-column" data-lte-toggle="treeview" role="menu">
                        <!--begin::Dashboard-->
                        <li class="nav-item">
                            <a asp-controller="HocSinh" asp-action="Dashboard" class="nav-link active">
