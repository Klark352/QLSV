            crossorigin="anonymous"></script>

    <!-- AdminLTE -->
    <script src="~/lte/js/adminlte.js"></script>

    <!-- ===== OverlayScrollbars init ===== -->
    <script>
        const SELECTOR_SIDEBAR_WRAPPER = '.sidebar-wrapper';
        const Default = {
            scrollbarTheme: 'os-theme-light',
            scrollbarAutoHide: 'leave',
            scrollbarClickScroll: true,
        };

        document.addEventListener('DOMContentLoaded', function () {
            const sidebarWrapper = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (sidebarWrapper && OverlayScrollbarsGlobal?.OverlayScrollbars) {
                OverlayScrollbarsGlobal.OverlayScrollbars(sidebarWrapper, {
                    scrollbars: {
                        theme: Default.scrollbarTheme,
                        autoHide: Default.scrollbarAutoHide,
                        clickScroll: Default.scrollbarClickScroll,
                    },
                });
            }
        });
    </script>

    <!-- ===== Realtime Clock ===== -->
    <script>
        function startLiveClock() {
            const el = document.getElementById('liveClock');
            if (!el) return;

            const fmtTime = new Intl.DateTimeFormat('vi-VN', {
                hour: '2-digit', minute: '2-digit', second: '2-digit'
            });
            const fmtDate = new Intl.DateTimeFormat('vi-VN', {
                weekday: 'short', year: 'numeric', month: '2-digit', day: '2-digit'
            });

            const tick = () => {
                const now = new Date();
                el.innerHTML = `<i class="bi bi-clock"></i> ${fmtTime.format(now)} <span style="opacity:.75">•</span> ${fmtDate.format(now)}`;
            };

            tick();
            setInterval(tick, 1000);
        }

        document.addEventListener('DOMContentLoaded', function () {
            startLiveClock();
        });
    </script>

    <!-- ===== (OPTION) Lưu trạng thái menu-open mà KHÔNG tự toggle ===== -->
    <script>
        (function () {
            const KEY = "openMenus_v2";

            function getKey(li) {
                // ổn định hơn: ưu tiên data-menu-key nếu có
                return li.getAttribute("data-menu-key")
                    || li.querySelector(":scope > .nav-link p")?.textContent?.trim()
                    || "";
            }

            function saveState() {
                const openKeys = [];
                document.querySelectorAll(".sidebar-menu .nav-item.menu-open").forEach(li => {
                    const k = getKey(li);
                    if (k) openKeys.push(k);
                });
                localStorage.setItem(KEY, JSON.stringify(openKeys));
            }

            function loadState() {
                const openKeys = JSON.parse(localStorage.getItem(KEY) || "[]");
                document.querySelectorAll(".sidebar-menu .nav-item").forEach(li => {
                    const hasTree = li.querySelector(":scope > .nav-treeview");
                    if (!hasTree) return;
                    const k = getKey(li);
                    if (k && openKeys.includes(k)) li.classList.add("menu-open");
                });
            }

            document.addEventListener("DOMContentLoaded", function () {
                loadState();

                // chỉ lắng nghe click để lưu trạng thái,
                // KHÔNG can thiệp AdminLTE toggle
                document.querySelectorAll(".sidebar-menu .nav-item > .nav-link").forEach(a => {
                    a.addEventListener("click", function () {
                        // đợi AdminLTE toggle xong rồi lưu
                        setTimeout(saveState, 0);
                    });
                });
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
